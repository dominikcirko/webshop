@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome to YourShop";
}

<div class="container min-vh-75 d-flex align-items-center py-5">
    <div class="row w-100 justify-content-center align-items-center">
        <div class="col-md-6 text-center text-md-start">
            <h1 class="display-4 fw-bold mb-4">Welcome to YourShop</h1>
            <p class="lead text-muted mb-4">Discover amazing products at unbeatable prices. Join our community of satisfied customers today.</p>

            <div class="row mb-4">
                <div class="col-md-6 mb-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-truck text-primary fs-4 me-2"></i>
                        <span>Free Shipping</span>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-shield-alt text-primary fs-4 me-2"></i>
                        <span>Secure Shopping</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-5 offset-md-1">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="h4 mb-4 text-center">Get Started</h2>
                    <div class="text-center mb-4">
                        <p class="text-muted">Please log in to continue shopping</p>
                    </div>

                    <div class="d-grid gap-3">
                        <button id="loginButton" class="btn btn-primary btn-lg">
                            Log In
                        </button>
                        <button id="registerButton" class="btn btn-outline-secondary btn-lg">
                            Create Account
                        </button>
                    </div>

                    <div class="mt-4 text-center">
                        <small class="text-muted">
                            By continuing, you agree to our
                            <a href="/terms" class="text-decoration-none">Terms of Service</a> and
                            <a href="/privacy" class="text-decoration-none">Privacy Policy</a>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('loginButton').addEventListener('click', function () {
            window.location.href = '/Login';            
        });
    </script>
    <script>
        document.getElementById('registerButton').addEventListener('click', function () {
            window.location.href = '/Register';
        });
    </script>
}

<style>
    .min-vh-75 {
        min-height: 75vh;
    }
</style>