@page
@model ProfileModel
@{
    ViewData["Title"] = "User Profile";
}

<main class="container mt-4">
    <h1 class="mb-4 text-center">User Profile</h1>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["Message"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["Error"]
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Personal Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-4 text-muted">Username:</div>
                        <div class="col-8">@Model.UserProfile.Username</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 text-muted">Full Name:</div>
                        <div class="col-8">@Model.UserProfile.FirstName @Model.UserProfile.LastName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 text-muted">Email:</div>
                        <div class="col-8">@Model.UserProfile.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 text-muted">Phone Number:</div>
                        <div class="col-8">@Model.UserProfile.PhoneNumber</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 text-muted">Role:</div>
                        <div class="col-8">@(@Model.UserProfile.IsAdmin ? "Admin" : "User")</div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <a class="btn btn-outline-primary btn-lg" href="/EditProfile">Edit Profile</a>
            </div>
        </div>
    </div>
</main>
