@page
@model LogoutModel
@{
    ViewData["Title"] = "Logged Out";
}

<div class="container min-vh-75 d-flex align-items-center justify-content-center py-5">
    <div class="text-center">
        <div class="mb-4">
            <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
        </div>

        <h1 class="h3 mb-4">Successfully Logged Out</h1>

        <p class="text-muted mb-4">Thank you for shopping with us. You have been safely logged out.</p>

        <div class="card shadow-sm mb-4 mx-auto" style="max-width: 400px;">
            <div class="card-body p-4">
                <h5 class="card-title mb-3">Want to continue shopping?</h5>
                <a href="/Login" class="btn btn-primary w-100">
                    <i class="fas fa-sign-in-alt me-2"></i>Sign In Again
                </a>
                <hr class="my-4">
                <div class="text-start mb-3">
                    <h6 class="fw-bold mb-3">While you're here:</h6>
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-envelope text-primary me-2"></i>
                        <a href="#" class="text-decoration-none">Subscribe to our newsletter</a>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-tag text-primary me-2"></i>
                        <a href="#" class="text-decoration-none">Check our latest deals</a>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-headset text-primary me-2"></i>
                        <a href="#" class="text-decoration-none">Contact customer support</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-muted">
            <p class="small mb-2">Follow us on social media</p>
            <div class="d-flex justify-content-center gap-3">
                <a href="#" class="text-muted text-decoration-none">
                    <i class="fab fa-facebook fa-lg"></i>
                </a>
                <a href="#" class="text-muted text-decoration-none">
                    <i class="fab fa-instagram fa-lg"></i>
                </a>
                <a href="#" class="text-muted text-decoration-none">
                    <i class="fab fa-twitter fa-lg"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    setTimeout(function () {
        window.location.href = '/Index';
    }, 5000);
</script>

<style>
    .min-vh-75 {
        min-height: 75vh;
    }
</style>